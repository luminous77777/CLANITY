<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.AttachMapper">

<!-- 첨부파일 목록 조회 -->
	<select id="list" resultType="attach">
			select * from attach 
			where target_id = #{targetId}
	</select>
	
<!-- 첨부파일 단일조회 -->
	<select id="findByUuid" parameterType="string" resultType="attach">
	  	SELECT * FROM attach WHERE file_name = #{fileName}
	</select>
	
<!-- 첨부파일 등록 -->
  	<insert id="insert" parameterType="attach" useGeneratedKeys="true" keyProperty="attachId">
	    INSERT INTO attach (
	      file_name, original_name, mime_type, image, size, uploaded_at, path)
	    VALUES (#{fileName}, #{originalName}, #{mimeType}, #{image}, #{size}, NOW(), #{path})
  	</insert>
  	
<!-- 첨부파일 삭제 -->
	<delete id="delete">
		delete from attach
		where file_name = #{fileName}
	</delete>
	<delete id="deleteByBno">
		delete from attach
		where target_id = #{targetId}
	</delete>

</mapper>